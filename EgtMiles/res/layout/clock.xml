<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dip"
    android:layout_height="50dp"
    android:background="@drawable/clock_overlay"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="28.0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <View
            android:id="@+id/clock_target"
            android:layout_width="24.0dip"
            android:layout_height="2.0dip"
            android:layout_gravity="top|left|center"
            android:layout_marginTop="14.0dip" />

        <View
            android:id="@+id/clock_face"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_gravity="top|left|center"
            android:layout_marginLeft="3.0dip"
            android:background="@drawable/clock_face" />

        <ImageView
            android:id="@+id/clock_face_minute"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_gravity="top|left|center"
            android:layout_marginLeft="3.0dip"
            android:src="@drawable/clock_minutes" />

        <ImageView
            android:id="@+id/clock_face_hour"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_gravity="top|left|center"
            android:layout_marginLeft="3.0dip"
            android:src="@drawable/clock_hour" />

        <View
            android:id="@+id/clock_center"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_gravity="top|left|center"
            android:layout_marginLeft="3.0dip"
            android:background="@drawable/clock_center" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/clock_digital_date"
                android:layout_width="wrap_content"
                android:layout_height="13.0dip"
                android:layout_marginTop="3.0dip"
                android:text="下午"
                android:textColor="@color/white"
                android:textSize="10.0dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/clock_digital_time"
                android:layout_width="wrap_content"
                android:layout_height="13.0dip"
                android:layout_marginTop="3.0dip"
                android:text="12:11"
                android:textColor="@color/white"
                android:textSize="10.0dip"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/clock_digital_ydate"
            android:layout_width="wrap_content"
            android:layout_height="13.0dip"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:text="2013-07-04"
            android:textColor="@color/white"
            android:textSize="10.0dip"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>